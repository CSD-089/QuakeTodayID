<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/pref_notification_group_title"
        app:iconSpaceReserved="false">

        <SwitchPreference
            app:title="@string/pref_notification_title"
            app:key="@string/pref_key_notification"
            app:defaultValue="false"
            app:icon="@drawable/ic_baseline_notifications_24"
            app:summary="@string/pref_notification_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_display_group_title"
        app:iconSpaceReserved="false">

        <ListPreference
            app:title="@string/pref_theme_title"
            app:key="@string/pref_key_theme"
            app:icon="@drawable/ic_baseline_brightness_medium_24"
            app:defaultValue="@string/pref_theme_entry_auto"
            app:entryValues="@array/pref_themes_entry"
            app:entries="@array/pref_themes_label"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>
</PreferenceScreen>